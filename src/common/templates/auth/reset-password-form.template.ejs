<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>

<body class="min-h-screen bg-white flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <!-- Header -->
      <div class="mb-6">
        <h1 class="text-2xl font-semibold text-gray-900 mb-1">Reset Password</h1>
        <p class="text-sm text-gray-600">Enter your new password</p>
      </div>

      <!-- Form -->
      <form id="resetForm" class="space-y-5">
        <!-- New Password Field -->
        <div>
          <label for="new_password" class="block text-sm font-medium text-gray-700 mb-1.5">New Password</label>
          <div class="relative">
            <input type="password" id="new_password" class="w-full px-3 py-2.5 pr-10 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-gray-900" placeholder="Enter new password" required />
            <button type="button" id="new_password_visible" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
              <i class="fas fa-eye text-sm"></i>
            </button>
          </div>
        </div>

        <!-- Confirm Password Field -->
        <div>
          <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1.5">Confirm Password</label>
          <div class="relative">
            <input type="password" id="confirm_password" class="w-full px-3 py-2.5 pr-10 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-gray-900" placeholder="Confirm new password" required />
            <button type="button" id="confirm_password_visible" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
              <i class="fas fa-eye text-sm"></i>
            </button>
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2.5 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          Reset Password
        </button>

        <!-- Back to Login -->
        <div class="text-center pt-2">
          <a href="<%= typeof clientUrl !== 'undefined' ? clientUrl : 'http://localhost:3000' %>/login" class="text-sm text-blue-600 hover:text-blue-700">
            Return to website
          </a>
        </div>
      </form>

      <!-- Error Message -->
      <% if (typeof err !== 'undefined' && err) { %>
      <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-md">
        <p class="text-sm text-red-600"><%= err %></p>
      </div>
      <% } %>

      <!-- Success Message -->
      <% if (typeof success !== 'undefined' && success) { %>
      <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-md">
        <p class="text-sm text-green-600"><%= success %></p>
      </div>
      <% } %>

      <!-- Client-side Success Message -->
      <div id="clientSuccess" class="mt-4 p-3 bg-green-50 border border-green-200 rounded-md hidden">
        <p class="text-sm text-green-600" id="clientSuccessText"></p>
      </div>

      <!-- Client-side Error Message -->
      <div id="clientError" class="mt-4 p-3 bg-red-50 border border-red-200 rounded-md hidden">
        <p class="text-sm text-red-600" id="clientErrorText"></p>
      </div>
    </div>
  </div>

  <script>
    const confirmPasswordEye = document.getElementById('confirm_password_visible');
    const passwordEye = document.getElementById('new_password_visible');

    confirmPasswordEye.addEventListener('click', () => {
      const confirmPasswordInput = document.getElementById('confirm_password');
      const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      confirmPasswordInput.setAttribute('type', type);
      confirmPasswordEye.querySelector('i').classList.toggle('fa-eye');
      confirmPasswordEye.querySelector('i').classList.toggle('fa-eye-slash');
    });

    passwordEye.addEventListener('click', () => {
      const passwordInput = document.getElementById('new_password');
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      passwordEye.querySelector('i').classList.toggle('fa-eye');
      passwordEye.querySelector('i').classList.toggle('fa-eye-slash');
    });

    const token = "<%= typeof token !== 'undefined' && token ? token : '' %>";
    const baseUrl = "<%= typeof clientUrl !== 'undefined' ? clientUrl : 'http://localhost:3000' %>";

    document.getElementById('resetForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      // Hide any previous error
      const errorDiv = document.getElementById('clientError');
      const successDiv = document.getElementById('clientSuccess');
      errorDiv.classList.add('hidden');
      successDiv.classList.add('hidden');

      const newPassword = document.getElementById('new_password').value;
      const confirmPassword = document.getElementById('confirm_password').value;

      try {
        const response = await axios.post('/api/v1/auth/verify-reset-password', {
          password: newPassword,
          token: token,
          confirmPassword: confirmPassword
        });

        if (response.status === 200) {
          // Show success message
          document.getElementById('clientSuccessText').textContent = 'Password reset successfully! Redirecting to login...';
          successDiv.classList.remove('hidden');

          // Redirect after 2 seconds
          setTimeout(() => {
            window.location.href = baseUrl + '/login';
          }, 2000);
        }
      } catch (error) {
        // console.error('Error:', error);
        const errorMessage = error?.response?.data?.error?.message || "Failed to reset password. Please try again.";

        // Show error in template
        document.getElementById('clientErrorText').textContent = errorMessage;
        errorDiv.classList.remove('hidden');
      }
    });
  </script>
</body>

</html>